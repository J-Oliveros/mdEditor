{{#if (has-block)}}
  {{yield}}
{{else}}
  {{#if userCurrentRoute}}
    <div>
      <span class="md-info">
        {{fa-icon "sticky-note" fixedWidth=true}}
        {{#ember-tooltip event="click" side="bottom" tooltipClass="ember-tooltip md-tooltip ember-popover info text-center"}}
          <span class="text-white">This attribute has an associated domain:</span>
          <hr>
          {{#link-to "dictionary.show.edit.domain" class="text-dark"}}
            {{indicatorDomainName}}
          {{/link-to}}
        {{/ember-tooltip}}
      </span>
    </div>
  {{/if}}
{{/if}}